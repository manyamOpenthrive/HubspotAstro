---
import Layout from "../layouts/Layout.astro";

const { title, description, herf, imageSrc, features = [] } = Astro.props;
---

<Layout title="Solution">
  <section class="text-center py-8">
    <div class="flex flex-wrap justify-center gap-6">
      <div
        class="bg-white shadow-lg border border-gray-200 rounded-lg p-6 max-w-xs text-left"
      >
        <img src={imageSrc} alt={title} class="w-full h-auto rounded mb-4" />
        <h3 class="text-xl font-semibold mb-2">{title}</h3>
        <p class="text-gray-700 mb-4">{description}</p>
        <a
          href={herf}
          class="bg-orange-500 justify-center text-white px-4 py-2 rounded hover:bg-orange-600 transition"
        >
          Learn More
        </a>
      </div>
    </div>
  </section>
</Layout>
